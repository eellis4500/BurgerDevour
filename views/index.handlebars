<h1>Eat-Da-Burger!</h1>

<h2>Add a Burger</h2>
<form id="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>Burgers to Devour!</h2>

<div id="beforedevour">
  <ul>
    {{#each burger}}
    {{#unless devour}}
    {{> burger/burger-block devour=true}}
    {{/unless}}
    {{/each}}
  </ul>
</div>

<h2>Devoured!</h2>

<ul>
  {{#each burger}}
  {{#if devour}}
  {{> burger/burger-block devour=false}}
  {{/if}}
  {{/each}}
</ul>